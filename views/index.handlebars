  <script>



    var editor = {
      template: `
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label for="exampleInputEmail1">Nom Complet</label>
      
      <div class="input-group">
        <div class="input-group-prepend bg-primary">
          <span class="input-group-text bg-transparent">
            <i class="mdi mdi-account-circle text-white"></i>
          </span>
        </div>
        <input type="text" class="form-control" placeholder="Nom Complet" id="name" aria-label="Nom Complet"
          aria-describedby="colored-addon1" value = {{ name }}>
      </div>
    </div>


    <div class="form-group">
      <label for="exampleInputEmail1">Adresse</label>
      <div class="input-group">
        <div class="input-group-prepend bg-primary">
          <span class="input-group-text bg-transparent">
            <i class="mdi mdi-account-location text-white"></i>
          </span>
        </div>
        <input type="text" id="address" class="form-control" placeholder="Adresse" aria-label="Adresse"
          aria-describedby="colored-addon1" value="{{ address }}">
      </div>
    </div>


  </div>
  <div class="col-md-6">
    <div class="form-group">
      <label for="exampleInputEmail1">E-mail</label>
      <div class="input-group">
        <div class="input-group-prepend bg-primary">
          <span class="input-group-text bg-transparent">
            <i class="mdi mdi-email text-white"></i>
          </span>
        </div>
        <input type="text" id="email" class="form-control" placeholder="Entrer l'email" aria-label="Entrer l'email"
          aria-describedby="colored-addon1" value = {{email}}>
      </div>
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">Province</label>
      <select class="form-control" id="province">
        <option>Antananarivo</option>
        <option>Antsiranana</option>
        <option>Mahajanga</option>
        <option>Toliara</option>
        <option>Toamasina</option>
        <option>Fianarantsoa</option>
      </select>
    </div>
  </div>
</div>
</div>`
    }

    var profil = {
      template: `
      <div>

  <br/>
  <div class="row">
    <div class="col-md-6">
      <address>
        <p class="font-weight-bold">{{name}}</p>
        <br/>
        <p>
          {{ address }}
          </p>
          <p>
            {{ province }}
            </p>
            </address>
            </div>
            <div class="col-md-6">
              <br/>
        <address class="text-primary">
          <p class="font-weight-bold">
            E-mail
        </p>
        <p class="mb-2">
          {{email}}
          </p>
          </address>
          </div>
          </div>
          <br/>
    </div>
    `
    }

    var disconnected = {
      template: `
  <div>

<div class="clearfix">
  <div class="float-left">
    <i class="mdi mdi-raspberrypi text-primary icon-lg"></i>
  </div>
  <div class="float-right">
    <p class="mb-0 text-right">Etat du Raspberry Pi</p>
    <div class="fluid-container">
      <h3 class="font-weight-medium text-right mb-0 text-danger"> <i class="mdi mdi-sync-off"></i>Déconnecté</h3>
    </Div>
  </div>
</div>
<p class="text-muted mt-3 mb-0">
  {{#if home_url}}
  <i class="mdi mdi-link mr-1" aria-hidden="true"></i> <a href="{{ home_url }}">{{ home_url }}</a>
  {{else}}
  <i class="mdi mdi-link-off mr-1" aria-hidden="true"></i> Aucun appareil synchronisé
  {{/if}}

</p>
  <div/>
    
    `
    }
    var connected_component = {
      template: `
    <div>
      <div class="clearfix">
    <div class="float-left">
      <i class="mdi mdi-raspberrypi text-primary icon-lg"></i>
    </div>
    <div class="float-right">
      <p class="mb-0 text-right">Etat du Raspberry Pi</p>
      <div class="fluid-container">
        <h3 class="font-weight-medium text-right mb-0 text-success"> <i class="mdi mdi-check"></i>Connecté</h3>
      </div>
    </div>
  </div>
  <p class="text-muted mt-3 mb-0">
<i class="mdi mdi-link mr-1" aria-hidden="true"></i> <a href="{{ home_url }}">{{ home_url }}</a>
  </p>
    </div>
`
    }
    Vue.use(VueResource)
    new Vue({
      el: '#app',
      data: {
        editor_mode: false,
        connected: false,
        is_online: false
      },
      components: {
        profil, editor,
        "connected-component": connected_component,
        "disconnected-component": disconnected
      },
      methods: {
        change_editor_mode() {
          this.editor_mode = !this.editor_mode
        },
        save() {
          var province = document.getElementById('province').value
          var name = document.getElementById('name').value
          var email = document.getElementById('email').value
          var address = document.getElementById('address').value
          //alert(document.location.href)
          var data = {
            name: name,
            email: email,
            address: address,
            province: province
          }
          this.$http.post(document.location.href + "users/update", data)
            .then((response) => {
              if (response.data.ok) {
                window.location.reload()
              }
            })
        }
      },
      mounted() {
        {{#if home_url}}
        this.$http.post("http://localhost:2000/is_online", {})
          .then((response) => {
            alert(response.data)
            this.is_online = true;
          })
        {{/if}}
          }
        })
  </script>

  <!-- End custom js for this page-->
</body>

